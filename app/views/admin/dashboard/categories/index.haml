.row{style: 'padding-bottom: 15px;'}
  .col-md-2
    = link_to 'Создать', new_admin_dashboard_category_url, class: 'pull-left btn btn-success'
.row
  .col-md-12{style: 'min-height: 500px;'}
    %section.panel
      %header.panel-heading
        Все категории
      .panel-body.table-responsive
        %table.table.table-hover
          .col-md-12#orders_pagination{style: 'text-align:center;'}
            = paginate @categories
          %thead
            %tr
              %th Название
              %th Товаров
              %th
          %tbody#categories
            - @categories.each do |category|
              %tr
                %td= category.name
                %td= category.products.length
                %td
                  = link_to edit_admin_dashboard_category_url(category, subdomain: 'admin'), class: 'btn btn-default btn-xs' do
                    %i.fa.fa-pencil
                  = link_to admin_dashboard_category_path(category), method: :delete, class: 'btn btn-default btn-xs',
                          data: {confirm: "Вы уверены что хотите удалить категорию #{category.name}"} do
                    %i.fa.fa-times